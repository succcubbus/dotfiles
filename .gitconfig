[alias]
    co = checkout
    s = status
    l = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all

[pull]
    rebase = true

[rebase]
    autosquash = true

[credential]
    helper = cache

[url "git@github.com:"]
    insteadOf = "gh:"
[url "git@github.com:iyzana/"]
    insteadOf = "gh:/"
[url "git@bitbucket.org:"]
    insteadOf = "bb:"
[url "git@bitbucket.org:succcubbus/"]
    insteadOf = "bb:/"

[include]
    path = .local/.gitconfig
[core]
    excludesfile = ~/.gitignore
[merge]
    tool = vscode
[mergetool "vscode"]
    cmd = "code --wait $MERGED"
[diff]
    tool = kitty
[difftool]
    prompt = false
    trustExitCode = true
[difftool "kitty"]
    cmd = kitty +kitten diff $LOCAL $REMOTE
